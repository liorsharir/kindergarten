#AddChildren{
    background-color:#eaf0ff;
    height: 100%;
    padding: 10px;
}


#AddChildren #formChid{
    display: flex;
    gap : 10px;
    justify-content: space-around;
    align-items: center;
    height: 250px;
}
#AddChildren #formChid #childImg{
    border: 1px solid;
    width: 30%;
    height: 70%;
}

#AddChildren #exit{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 30px;
    height: 30px;
    background-color: red;
    border-radius: 5px;
    position: relative;
    top:1px;
    left:-90%;
}




#AddChildren input{
    width:  200px;
    height: 30px;
    padding: 3px;
    padding-right: 10px;
    border-radius: 10px;
    margin-bottom: 10px;
}

#AddChildren label{
    margin-bottom: 5px;
}

#AddChildren textarea{
    width:  100%;
    min-height: 100px;
    margin-bottom: 5px;
}



#formDad input{
    width:  140px;
}



#formMom input{
    width:  140px;
}


#formMom ,#formDad{
    margin-bottom: 30px;
}


#child-action{
    display: flex;
    justify-content: space-around;
    width: 100%;
}

#saveChild ,#deleteChild{
    background-color: #32bd7b;
    width: 100px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    color:white;
    border-radius: 20px;
}
#deleteChild{
    background-color: #bd3240;
}
#saveChild{
    background-color: #32bd7b;
}